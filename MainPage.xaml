<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BugReproductionTest.MainPage">
    <Grid>
        <ScrollView Margin="0,70,0,0">
            <VerticalStackLayout Spacing="5">
                <Grid HeightRequest="150" BackgroundColor="White" HorizontalOptions="Fill">
                    <RoundRectangle Margin="10" CornerRadius="15" Fill="white" Stroke="silver">
                        <RoundRectangle.Shadow>
                            <Shadow Brush="black" Offset="5,10" Radius="10" Opacity="0.5"/>
                        </RoundRectangle.Shadow>
                    </RoundRectangle>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
